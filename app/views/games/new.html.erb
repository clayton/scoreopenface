<h2>Get Started</h2>
<div class="row-fluid">
	<div class="span12">
		<%= form_for @game do |f| %>
			<span class="help-block">Enter the names of up to four players.</span>
			<%= text_field_tag "player_1", "", :placeholder => "Player One" %>
			<%= text_field_tag "player_2", "", :placeholder => "Player Two" %>
			<%= text_field_tag "player_3", "", :placeholder => "Player Three" %>
			<%= text_field_tag "player_4", "", :placeholder => "Player Four" %>
			<%= submit_tag "Create Game", :class => "btn btn-primary" %>
		<% end %>
	</div>
</div>